<section class="container-fluid contact-body">
  <h1 class="hero-contact">Contact us</h1><hr>
    <div class="col-md-4">
      <div class="contact-us">We look forward to hearing from you</div><br>
      <ul>
        <div class="contact-bullets"><span class="glyphicon glyphicon-screenshot"></span>P.O. Box #2291<br><span class="address">Palatine, IL 60078</p>
        <div class="contact-bullets"><span class="glyphicon glyphicon-earphone"></span>847-701-4138</p>  
      </ul>
    </div>
    <div class="col-md-8 ">
      <div class="form-group">
        <%= form_for @contact do |f| %>
          <%= f.label :name, class: "form-control-text" %><br>
          <%= f.text_field :name, required: true, class: 'form-control', placeholder: "Enter your name" %>
        </div>
        <div class="form-group">
          <%= f.label :email, class: "form-control-text" %><br>
          <%= f.email_field :email, required: true, class: 'form-control', placeholder: "Enter your email address" %>
        </div>
        <div class="form-group">
          <%= f.label :message, class: "form-control-text" %><br>
          <%= f.text_area :message, as: :text, required: true, class: 'form-control', rows: 8, placeholder: "Enter your message here" %>
        </div>
        <div class="hidden">
          <%= f.label :nickname %><br>
          <%= f.text_field :nickname, hint: "leave this field blank" %>
        </div>
          <%= f.submit "Send Message", class: "btn btn-success" %><br>
        <% end %>
        </div>
  </section>