<script>
  var animateFrontTitle = function() {
    var revealFrontTitle = function() {
      $(this).css({
        opacity: 1,
        transofmr: 'scaleX91) translateY(0)'
      });
    };

    $.each($('.animate-title'), revealFrontTitle);
};

 $(document).ready(function() {
     if ($(window).height() > 50) {
         animateFrontTitle();
     }

    var scrollDistance = $('.front-display').offset().top - $(window).height() + 200;
     $(window).scroll(function(event) {
         if ($(window).scrollTop() >= scrollDistance) {
             animateFrontTitle();
         }
     });
   });
</script>

